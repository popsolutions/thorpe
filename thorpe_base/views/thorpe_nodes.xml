<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_thorpe_base_nodes" model="ir.actions.act_window">
        <field name="name">Thorpe Nodes</field>
        <field name="res_model">thorpe.base.node</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="thorpe_base_nodes_view" model="ir.ui.view">
        <field name="name">thorpe.base.node.list.view</field>
        <field name="model">thorpe.base.node</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="selected_to_sales" />
            <field name="status" />
        </tree>
        </field>
    </record>     
</odoo>